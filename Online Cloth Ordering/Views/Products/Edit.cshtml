@model Online_Cloth_Ordering.ViewModel.Cart

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CartId" />
            <div class="form-group">
               @* <label asp-for="ProductIdInCart" class="control-label"></label>*@
                <input asp-for="ProductIdInCart" class="form-control" type="hidden" />
                <span asp-validation-for="ProductIdInCart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label> : 
           <b> @Html.DisplayFor(model => model.ProductName) </b>
                <input asp-for="ProductName" class="form-control" type="hidden" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrices" class="control-label"></label> : 
            <b>@Html.DisplayFor(model => model.ProductPrices) </b>
                <input asp-for="ProductPrices" class="form-control" type="hidden" />
                <span asp-validation-for="ProductPrices" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="UserName" class="control-label"></label>*@
                <input asp-for="UserName" class="form-control" type="hidden" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Quantity" class="control-label mb-1"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="viewCart">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
